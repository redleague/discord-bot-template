{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"lib": ["ES2022"],
		"strict": true,
		"outDir": "build",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types",
			"src/typings/*"
		]
	},
	"exclude": [],
	"include": ["src/**/*.ts", "src/**/*.json"]
}